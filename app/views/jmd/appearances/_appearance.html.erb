<%= content_tag :p, class: (appearance.accompaniment? ? "muted" : nil) do %>
    <%= content_tag :strong,
          link_to_modal(appearance.participant.full_name, :participant, appearance.participant.id) %>,
    <%= appearance.instrument.name %>
    <%= age_group_badge_tag(appearance) %> (* <%= l appearance.participant.birthdate %>)

    <%= render partial: "jmd/participants/participant_modal", locals: { participant: appearance.participant } %>
  <% end %>

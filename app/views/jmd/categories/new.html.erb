<% provide(:title, "Neue Kategorie erstellen") %>

<%= simple_form_for([:jmd, @category], html: { class: "form-horizontal" }) do |form| %>
  <%= render 'category_fields', f: form %>
  <div class="form-actions">
    <%= form.button :submit, "Kategorie erstellen", class: "btn-primary" %>
    <%= link_to "Abbrechen", jmd_categories_path, class: "btn" %>
  </div>
<% end %>

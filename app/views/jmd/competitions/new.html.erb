<% provide(:title, "Neuen Wettbewerb erstellen") %>

<%= simple_form_for([:jmd, @competition], html: { class: "form-horizontal" }) do |form| %>
  <%= render 'competition_fields', :f => form %>
  <div class="form-actions">
    <%= form.button :submit, "Wettbewerb erstellen", class: "btn-primary" %>
    <%= link_to "Abbrechen", jmd_competitions_path, class: "btn" %>
  </div>
<% end %>

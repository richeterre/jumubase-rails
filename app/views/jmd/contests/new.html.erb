<% provide(:title, "Neuen Wettbewerb erstellen") %>

<%= simple_form_for([:jmd, @contest], html: { class: "form-horizontal" }) do |form| %>
  <%= render 'contest_fields', :f => form %>
  <div class="form-actions">
    <%= form.button :submit, "Wettbewerb erstellen", class: "btn-primary" %>
    <%= link_to "Abbrechen", jmd_contests_path, class: "btn btn-default" %>
  </div>
<% end %>

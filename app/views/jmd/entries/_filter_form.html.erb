<%= form_tag path, :method => 'get', :id => "entries_filter" do %>
  <%= hidden_field_tag :sort, params[:sort] %>
	<%= select nil, :is_pop, options_for_select({ "Klassik" => 0, "Pop" => 1 }, current_scopes[:is_pop]),
      { :include_blank => "Alle Genres" } %>
  <%= select nil, :in_category, Category.all.collect { |c| [c.name, c.id] },
      { :selected => params[:in_category], :include_blank => "Alle Kategorien" } %>
  <%# select nil, :from_host, Host.all.collect { |c| [c.name, c.id] },
      { :selected => params[:from_host], :include_blank => "Alle Schulen" } %>
	<%# select nil, :on_date,
					@competition_days.collect { |day| [l(day, :format => :long), day.to_s] },
	      { :selected => params[:on_date], :include_blank => "Alle Tage" } %>
  <%= submit_tag "Filtern", :name => nil %>
<% end %>
<% provide(:title, "Neues Vorspiel erstellen") %>

<%= render 'noscript' %>

<%= simple_form_for([:jmd, @performance], html: { class: "form-horizontal" }) do |form| %>
  <%= render 'performance_fields', :f => form %>
  <div class="form-actions">
    <%= form.button :submit, "Vorspiel erstellen", class: "btn-primary" %>
    <%= link_to "Abbrechen", jmd_performances_path, class: "btn" %>
  </div>
<% end %>

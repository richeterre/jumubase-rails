<ul class="nav nav-list">

  <% if can? :manage, Competition %>

    <li class="nav-header">Verwalten</li>
    <%= nav_link_to icon_tag("user") + " Benutzer", jmd_users_path if can? :manage, User %>
    <%= nav_link_to icon_tag("list") + " Kategorien", jmd_categories_path if can? :manage, Category %>
    <%= nav_link_to icon_tag("globe") + " Wettbewerbe", jmd_competitions_path if can? :manage, Competition %>

  <% elsif JUMU_ROUND > 1 and can? :list_current, Performance %>

    <li class="nav-header">Einsehen</li>
    <%= nav_link_to icon_tag("time") + " Aktuelle Vorspiele", list_current_jmd_performances_path %>

  <% end %>

  <% current_competitions = Competition.current.accessible_by(current_ability)
    if current_competitions.any? %>
      <li class="nav-header">Aktuelle Wettbewerbe</li>
      <% current_competitions.each do |competition| %>
      <%= nav_link_to competition.name, jmd_competition_path(competition) %>
     <% end %>
  <% end %>
</ul>
